{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mhgu-weapon-transmog-tool",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "copyFile": true,
        "exists": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "**",
          "**/*",
          "/**/*"
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.feckneck.mhgu-weapon-transmog-tool",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "MHGU Weapon Transmog Tool",
        "width": 1000,
        "height": 600
      }
    ]
  }
}